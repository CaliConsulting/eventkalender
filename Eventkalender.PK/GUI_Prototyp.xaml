<Window x:Class="Eventkalender.PK.GUI.GUI_Prototyp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eventkalender.PK.GUI"
        mc:Ignorable="d"
        Title="GUI_Prototyp" Height="800" Width="600">

    <StackPanel Margin="0,0,0,0">
        <TabControl Height="Auto"
        TabStripPlacement="Top">
            <TabItem Header="Programkonstruktion">
                <Grid Margin="-1,0,-4.8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="Search"
                        Text="Sök nation"
                        Grid.Row="2"
                        Grid.Column="1"/>
                    <TextBlock 
                        Grid.Column="2"
                        Grid.Row="1"
                        Margin="20,0,0,0"
                        Text="Sortera efter:"/>
                    <ComboBox
                        Grid.Column="2"
                        Grid.Row="2"
                        Margin="20,0,0,0"
                        Text="Aktivitet">
                    <ComboBoxItem x:Name="Tid" Content="Tid"/>
                    <ComboBoxItem x:Name="Nation" Content="Nation"/>
                    </ComboBox>
                    <Calendar 
                        Grid.Column="1"
                        Grid.Row="3"
                        Margin="0,5,0,0"/>
                    <Grid Grid.ColumnSpan="4"/>
                </Grid>
            </TabItem>
            <TabItem Header="Webservices">
                <Grid/>
            </TabItem>
            <TabItem Header="ERP Integration">
                <Grid/>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
