<Window x:Class="Eventkalender.PK.GUI.GUI_Prototyp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eventkalender.PK.GUI"
        xmlns:wpf="http://wpfcontrols.com/"
        mc:Ignorable="d"
        Title="GUI_Prototyp" Height="600" Width="645">

    <StackPanel Margin="0,0,0,0">
        <TabControl Height="570"
        TabStripPlacement="Top" Margin="0,0,0.2,0">
            <TabItem Header="Programkonstruktion">
                <StackPanel>
                    <TabControl Height="538" Margin="0,0,0.2,0">
                        <TabItem Header="Hitta events" Margin="-4,-2,0.2,0">
                            <Border>
                                <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <wpf:AutoCompleteTextBox x:Name="SearchBox"
                                    GotKeyboardFocus="SearchBox_GotKeyboardFocus"
                                    Watermark="Sök"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="100"
                                    Height="20"/>
                                    <TextBlock 
                                    Grid.Column="1"
                                    Grid.Row="3"
                                    Margin="0,5,0,0"
                                    Text="Sortera efter:"
                                    Grid.RowSpan="1"/>
                                    <ComboBox
                                    Grid.Column="1"
                                    Grid.Row="4"
                                    Margin="0,0,0,0"
                                    Text="Aktivitet"
                                    Grid.RowSpan="1">
                                        <ComboBoxItem x:Name="cmbitmDate" Content="Datum"/>
                                        <ComboBoxItem x:Name="cmbitmNation" Content="Nation"/>
                                        <ComboBoxItem x:Name="cmbitmStart" Content="Starttid"/>
                                        <ComboBoxItem x:Name="cmbitmClosing" Content="Stängningstid"/>
                                    </ComboBox>
                                    <DataGrid Grid.Column="3"
                                    Grid.Row="2"
                                    Width="455"
                                    Height="500"
                                    Grid.RowSpan="5" 
                                    Grid.ColumnSpan="2" 
                                    Margin="1.6,0.4,0,-0.4"
                                    IsReadOnly="True">
                                    </DataGrid>
                                </Grid>
                            </Border>
                        </TabItem>
                        <TabItem Header="Eventhantering">
                            <Canvas Height="525" Margin="0,0,0,0">
                                <StackPanel Canvas.Left="10" Canvas.Top="10"  >
                                    <TextBlock Text="Lägg till Event"
                                               FontWeight="BOLD"/>
                                    <TextBlock Text="Eventnamn"/>
                                    <TextBox Margin="5"
                                             AcceptsReturn="True"
                                             AcceptsTab="False"
                                             Width="150"
                                             HorizontalAlignment="Left">
                                    </TextBox>
                                    <TextBlock Text="Nation"/>
                                    <wpf:AutoCompleteTextBox
                                             Margin="5,0,0,0"
                                        HorizontalAlignment="Left"
                                             Width="150"
                                             SelectedItem="{Binding Nationer}"
                                             MaxWidth="150">
                                    </wpf:AutoCompleteTextBox>
                                    <TextBlock Text="Start av event:"/>
                                    <ComboBox IsEditable="True"
                                              MaxWidth="150"
                                              Width="150"
                                              HorizontalAlignment="Left">
                                        <Calendar>
                                        </Calendar>
                                    </ComboBox>
                                    <TextBlock Text="Eventets slut:"/>
                                    <ComboBox IsEditable="True"
                                              Width="150"
                                              MaxWidth="150"
                                              HorizontalAlignment="Left">
                                        <Calendar>
                                        </Calendar>
                                    </ComboBox>
                                    <TextBlock Text="Beskrivning:"/>
                                    <TextBox Height="100" 
                                             Width="250"
                                             TextWrapping="Wrap"/>
                                    <Button Content="Registrera"
                                            Margin="0,15,0,0"
                                            Width="100"/>
                                </StackPanel>
                                <StackPanel Canvas.Left="325" Canvas.Top="10">
                                    <TextBlock Text="Ta bort event" FontWeight="Bold"/>
                                    <TextBlock Text="Filtrera"/>
                                    <TextBox x:Name="txtBox_Events"
                                             Width="150"
                                             MaxWidth="150"
                                             HorizontalAlignment="Left"/>
                                    <Button Content="Sök"
                                            Margin="0,15,0,0"
                                            Width="100"
                                            HorizontalAlignment="Left"/>
                                    <DataGrid x:Name="datagridEvents" 
                                             ScrollBar.Scroll="datagridEvents_Scroll"
                                             Height="300"
                                             Width="250"
                                              Margin="0,15,0,0">
                                    </DataGrid>
                                    <Button Content="Radera"
                                            Margin="0,15,0,0"
                                            Width="100"/>
                                </StackPanel>
                            </Canvas>
                        </TabItem>
                        <TabItem Header="Personhantering">
                            <Canvas Height="525" Margin="0,0,0,0">
                                <StackPanel Canvas.Left="10" Canvas.Top="10">
                                    <TextBlock Text="Lägg till Person"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="Förnamn"/>
                                    <TextBox x:Name="txtBoxFirstName"/>
                                    <TextBlock Text="Efternamn"/>
                                    <TextBox x:Name="txtBoxLastName"/>
                                    <Button x:Name="btnRegPers"
                                            Content="Registrera"
                                            Margin="0,15,0,0"/>
                                </StackPanel>
                                <StackPanel Canvas.Left="150" 
                                            Canvas.Top="10">
                                    <TextBlock Text="Radera personer"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="Namnsökning"/>
                                    <TextBox x:Name="txtBox_SrchName"
                                             MaxWidth="150"
                                             Width="150"
                                             HorizontalAlignment="Left"/>
                                    <Button x:Name="btn_SrchName"
                                            Content="Sök"
                                            Margin="0,15,0,0"
                                            Width="100"
                                            HorizontalAlignment="Left"/>
                                    <DataGrid x:Name="datagrid_ErasePerson"
                                              Height="200"
                                              Width="300"
                                              Margin="0,15,0,0"/>
                                    <Button x:Name="btn_ErasePerson"
                                            Content="Radera"
                                            Margin="0,15,0,0"
                                            Width="100"/>
                                </StackPanel>
                            </Canvas>
                        </TabItem>
                        <TabItem Header="Inbjudningar">
                            
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </TabItem>
            <TabItem Header="Webservices">
                <Grid/>
            </TabItem>
            <TabItem Header="ERP Integration">
                <Grid/>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
