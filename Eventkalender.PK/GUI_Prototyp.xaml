<Window x:Class="Eventkalender.PK.GUI.GUI_Prototyp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eventkalender.PK.GUI"
        xmlns:wpf="http://wpfcontrols.com/"
        mc:Ignorable="d"
        Title="GUI_Prototyp" Height="600" Width="640">

    <StackPanel Margin="0,0,0,0">
        <TabControl Height="570"
                    TabStripPlacement="Top" Margin="0,0,0,0">
            <TabItem Header="Programkonstruktion">
                <StackPanel>
                    <TabControl Height="540" Margin="0,0,0,0">
                        <TabItem Header="Hitta events" Margin="0,0,0,0">
                            <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <wpf:AutoCompleteTextBox x:Name="SearchBox"
                                    GotKeyboardFocus="SearchBox_GotKeyboardFocus"
                                    Watermark="Sök"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="100"
                                    Height="20"/>
                                    <TextBlock 
                                    Grid.Column="1"
                                    Grid.Row="3"
                                    Margin="0,5,0,0"
                                    Text="Sortera efter:"
                                    Grid.RowSpan="1"/>
                                <ComboBox x:Name="cmb_SortEvents"
                                        Grid.Column="1"
                                        Grid.Row="4"
                                        Margin="0,0,0,0"
                                        Text="Aktivitet"
                                        Grid.RowSpan="1">
                                    <ComboBoxItem x:Name="Datum" 
                                                  Content="Datum"
                                                  />
                                        <ComboBoxItem x:Name="Nation"
                                                      Content="Nation"/>
									</ComboBox>
                                <DataGrid x:Name="dtg_ShowEvents"
                                    Grid.Column="3"
                                    Grid.Row="2"
                                    Width="450"
                                    Height="500"
                                    Grid.RowSpan="5" 
                                    Grid.ColumnSpan="2" 
                                    Margin="1.6,0.4,0,-0.4"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding Path=EventsList}"
                                    ToolTip="Visar upp alla tillgängliga evenemang samt hur många som är inbjudna"
                                    ToolTipService.BetweenShowDelay="50000"/>
                                <TextBlock  Text="{Binding Path=StatusProperty}"
                                            Grid.Column="1"
                                            Grid.Row="6"
                                            VerticalAlignment="Bottom"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Eventhantering" Margin="0,0,0,0">
                            <Canvas Height="515" Margin="0,0,0,0">
                                <StackPanel Canvas.Left="10" Canvas.Top="10"  >
                                    <TextBlock Text="Lägg till Event"
                                               FontWeight="BOLD"/>
                                    <TextBlock Text="Eventnamn"/>
                                    <TextBox x:Name="txtBox_EventName"
                                             Margin="0,0,0,0"
                                             AcceptsReturn="True"
                                             AcceptsTab="False"
                                             Width="150"
                                             HorizontalAlignment="Left"/>
                                    <TextBlock Text="Nation"/>
                                    <ComboBox x:Name="cmBox_Nation"
                                             Margin="0,0,0,0"
                                             HorizontalAlignment="Left"
                                             MaxWidth="150"
                                             Width="150"
                                             ItemsSource="{Binding Path=NationerList}"
                                             IsEditable="True"
                                             IsTextSearchEnabled="True"/>
                                    <TextBlock Text="Start av event:"/>
                                    <DatePicker x:Name="dtpick_StartDate"
                                              MaxWidth="150"
                                              Width="150"
                                              HorizontalAlignment="Left"
                                              ToolTip="Vilket datum äger evenemanget rum?"
                                              ToolTipService.BetweenShowDelay="50000"/>
                                    
                                    <TextBlock Text="Eventets slut:"/>
                                    <DatePicker x:Name="dtpick_EndDate"
                                              Width="150"
                                              MaxWidth="150"
                                              HorizontalAlignment="Left"
                                              ToolTip="Vilket datum slutar evenemanget?"
                                            ToolTipService.BetweenShowDelay="50000"/>

                                    <TextBlock Text="Beskrivning:"/>
                                    <TextBox x:Name="txtBox_Summary"
                                             Height="200" 
                                             Width="250"
                                             TextWrapping="Wrap"/>
                                    <Button x:Name="btn_RegsterEvent"
                                            Click="btn_RegsterEvent_Click"
                                            Content="Registrera"
                                            Margin="0,15,0,0"
                                            Width="100"
                                            ToolTip="Registrerar evenemanget med de ifyllda attributen"
                                            ToolTipService.BetweenShowDelay="50000"/>
                                </StackPanel>
                                <TextBlock Text="Tid:"
                                           Canvas.Top="100"
                                           Canvas.Left="170"/>
                                <ComboBox x:Name="cmb_StartTime"
                                          IsEditable="True"
                                          MaxWidth="150"
                                          Canvas.Left="170"
                                          Canvas.Top="115"
                                          ItemsSource="{Binding Path=TimesList}"
                                          >
                                </ComboBox>
                                <TextBlock Text="Tid:"
                                           Canvas.Top="140"
                                           Canvas.Left="170"/>
                                <ComboBox x:Name="cmb_EndTime"
                                          IsEditable="True"
                                          MaxWidth="150"
                                          Canvas.Left="170"
                                          Canvas.Top="155"
                                          ItemsSource="{Binding Path=TimesList}"
                                          >
                                </ComboBox>
                                <StackPanel Canvas.Left="320" Canvas.Top="10">
                                    <TextBlock Text="Ta bort event" FontWeight="Bold"/>
                                    <TextBlock Text="Filtrera"/>
                                    <TextBox x:Name="txtBox_Events"
                                             Width="150"
                                             MaxWidth="150"
                                             HorizontalAlignment="Left"/>
                                    <Button x:Name="btn_SrchEvent"
                                            Click="btn_SrchEvent_Click"
                                            Content="Sök"
                                            Margin="0,15,0,0"
                                            Width="100"
                                            HorizontalAlignment="Left"
                                            ToolTip="Söker upp eventen som matchar det ifyllda värdet i sökfältet. Lämnas tomt för att visa alla tillgängliga evenemang"
                                            ToolTipService.BetweenShowDelay="50000"/>
                                    
                                    <DataGrid x:Name="datagridEvents"
                                              SelectionMode="Extended"
                                              Height="300"
                                              Width="290"
                                              Margin="0,15,0,0"
                                              VerticalScrollBarVisibility="Auto"
                                              ItemsSource="{Binding Path=EventsList}"/>

                                    <Button x:Name="btn_DeleteEvent"
                                            Click="btn_DeleteEvent_Click"
                                            Content="Radera"
                                            Margin="0,15,0,0"
                                            Width="100"
                                            ToolTip="Raderar de valda evenemangen"
                                            ToolTipService.BetweenShowDelay="50000"/>
                                </StackPanel>
                                <TextBlock  Text="{Binding Path=StatusProperty}"
                                            Canvas.Bottom="10"
                                            Canvas.Left="10"/>
                            </Canvas>
                        </TabItem>
                        <TabItem Header="Personhantering" Margin="0,-0,0,0">
                            <Canvas Height="510" Margin="0,0,0,0">
                                <StackPanel Canvas.Left="10" Canvas.Top="10">
                                    <TextBlock Text="Lägg till Person"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="Förnamn"/>
                                    <TextBox x:Name="txtBoxFirstName"/>
                                    <TextBlock Text="Efternamn"/>
                                    <TextBox x:Name="txtBoxLastName"/>
                                    <Button x:Name="btnRegPers"
                                            Content="Registrera"
                                            Margin="0,15,0,0"
                                            ToolTip="Registerar en person med de ifyllda namnen"
                                            ToolTipService.BetweenShowDelay="50000"/>
                                </StackPanel>
                                <StackPanel Canvas.Left="150" 
                                            Canvas.Top="10">
                                    <TextBlock Text="Lägg till Nation"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="Namn"/>
                                    <TextBox x:Name="txtBox_NationName"
                                             MaxWidth="150"
                                             Width="150"
                                             HorizontalAlignment="Left"/>
                                    <Button x:Name="btn_RegNationName"
                                            Click="btn_RegNationName_Click"
                                            Content="Registrera"
                                            Margin="0,15,0,0"
                                            Width="100"
                                            HorizontalAlignment="Left"
                                            ToolTip="Registerar en Nation med det ifyllda namnet"
                                            ToolTipService.BetweenShowDelay="50000"/>
                                </StackPanel>
                                <TextBlock Text="Val av lista:"
                                           Canvas.Bottom="240"
                                           Canvas.Left="10"/>
                                <ComboBox x:Name="cmBox_filterList"
                                          Canvas.Left="10"
                                          Canvas.Bottom="230"
                                          Width="100"
                                          MaxWidth="100"
                                          HorizontalAlignment="Left"
                                          ToolTip="Hämtar och sorterar listan efter den valda parametern"
                                          ToolTipService.BetweenShowDelay="50000">
                                    <ComboBoxItem Content="Nationer"/>
                                    <ComboBoxItem Content="Personer"/>
                                </ComboBox>
                                <Button x:Name="btn_EraseFromList"
                                            Content="Radera"
                                            Width="100"
                                            MaxWidth="150"
                                            Canvas.Right="20"
                                            Canvas.Bottom="230"
                                            ToolTip="Raderar valda raderna från listan och databasen"
                                            ToolTipService.BetweenShowDelay="50000"
                                            Click="btn_EraseFromList_Click"/>
                                <DataGrid x:Name="datagrid_ErasePerson"
                                              Height="200"
                                              Width="600"
                                              Margin="0,0,0,0"
                                              Canvas.Bottom="25"
                                              Canvas.Left="10"
                                              VerticalScrollBarVisibility="Auto"
                                              HeadersVisibility="Column"
                                              SelectionMode="Extended" 
                                              ToolTip="Visar en lista över tillagda personer eller nationer från databasen."
                                              ToolTipService.BetweenShowDelay="50000"/>
                                <TextBlock  Text="{Binding Path=StatusProperty}"
                                            Canvas.Bottom="10"
                                            Canvas.Left="10"/>
                            </Canvas>
                        </TabItem>
                        <TabItem Header="Inbjudningar" Margin="0,0,0,0">
                            <Canvas>
                                <StackPanel Canvas.Left="10"
                                            Canvas.Top="10">
                                    <TextBlock Text="Personer" FontWeight="Bold"/>
                                    <TextBox Margin="0,15,0,0"
                                             Width="100"
                                             MaxWidth="100"
                                             TextWrapping="NoWrap"
                                             HorizontalAlignment="Left"/>
                                    <Button x:Name="btn_InvSrchPerson"
                                            Margin="0,15,0,0"
                                            Content="Sök"
                                            Width="100"
                                            MaxWidth="100"
                                            HorizontalAlignment="Left"/>
                                    <DataGrid x:Name="datagrid_InvitePersons"
                                             Height="300"
                                             Width="250"
                                             MaxWidth="250"
                                             Margin="0,15,0,0"
                                             VerticalScrollBarVisibility="Auto"
                                             SelectionMode="Extended"/>
                                    <Button x:Name="btn_MarkAllPerson"
                                            Content="Markera alla"
                                            Margin="0,15,0,0"
                                            Width="100"/>
                                </StackPanel>
                                <StackPanel Canvas.Left="360"
                                            Canvas.Top="10">
                                    <TextBlock Text="Events" FontWeight="Bold"/>
                                    <TextBox Margin="0,15,0,0"
                                             Width="100"
                                             MaxWidth="100"
                                             TextWrapping="NoWrap"
                                             HorizontalAlignment="Left"/>
                                    <Button x:Name="btn_InvSrchEvent"
                                            Margin="0,15,0,0"
                                            Content="Sök"
                                            Width="100"
                                            MaxWidth="100"
                                            HorizontalAlignment="Left"/>
                                    <DataGrid x:Name="datagrid_InviteEvent"
                                             Height="300"
                                             Width="250"
                                             MaxWidth="250"
                                             Margin="0,15,0,0"
                                             VerticalScrollBarVisibility="Auto"
                                             SelectionMode="Extended"/>
                                    <Button x:Name="btn_MarkAllEvents"
                                            Content="Markera alla"
                                            Margin="0,15,0,0"
                                            Width="100"/>
                                </StackPanel>
                                <Button x:Name="btn_InvToEvent"
                                        Content="Bjud in"
                                        Canvas.Bottom="40"
                                        Canvas.Left="275"
                                        Width="70"/>
                                <TextBlock  Text="{Binding Path=StatusProperty}"
                                            Canvas.Bottom="10"
                                            Canvas.Left="10"/>
                            </Canvas>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </TabItem>
            <TabItem Header="Webservices">
                <TabControl>
                    <TabItem Header="Run web">
                        Nätet körs här.
                    </TabItem>
                    <TabItem Header="Spindelmannen swingar">
                        Tom flik som kan användas
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="ERP Integration">
                <TabControl>
                    <TabItem Header="Cronus">
                        Hämtar data från Cronusdatabasen
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
