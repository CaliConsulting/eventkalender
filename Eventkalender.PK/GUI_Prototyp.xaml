<Window x:Class="Eventkalender.PK.GUI.GUI_Prototyp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eventkalender.PK.GUI"
        xmlns:wpf="http://wpfcontrols.com/"
        mc:Ignorable="d"
        Title="GUI_Prototyp" Height="600" Width="600">

    <StackPanel Margin="0,0,0,0">
        <TabControl Height="575"
        TabStripPlacement="Top">
            <TabItem Header="Programkonstruktion">
                <StackPanel>
                    <TabControl>
                        <TabItem Header="Hitta events">
                            <Border>
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                <wpf:AutoCompleteTextBox x:Name="SearchBox"
                                    GotKeyboardFocus="SearchBox_GotKeyboardFocus"
                                    Watermark="Sök"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="100"
                                    Height="20"/>
                                <TextBlock 
                                    Grid.Column="1"
                                    Grid.Row="3"
                                    Margin="0,5,0,0"
                                    Text="Sortera efter:"
                                    Grid.RowSpan="1"/>
                                <ComboBox
                                    Grid.Column="1"
                                    Grid.Row="4"
                                    Margin="0,0,0,0"
                                    Text="Aktivitet"
                                    Grid.RowSpan="1">
                                    <ComboBoxItem x:Name="Datum" Content="Tid"/>
                                    <ComboBoxItem x:Name="Nation" Content="Nation"/>
                                </ComboBox>
                                <ComboBox
                                    Grid.Column="1"
                                    Grid.Row="5"
                                    Height="22"
                                    Margin="0,5,0,0">
                                    <ComboBoxItem Content="Starttid"/>
                                    <ComboBoxItem Content="Stängningstid"/>
                                </ComboBox>
                                <DataGrid Grid.Column="3"
                                    Grid.Row="2"
                                    Width="400"
                                    Height="500"
                                    Grid.RowSpan="5" 
                                    Grid.ColumnSpan="2" 
                                    Margin="1.6,0.4,0,-0.4"
                                    IsReadOnly="True">
                                </DataGrid>
                            </Grid>
                          </Border>
                        </TabItem>
                        <TabItem Header="Eventhantering">

                            <Canvas Height="520" Margin="0,0,0.2,0">
                                <StackPanel Canvas.Left="10" Canvas.Top="10"  >
                                   <!-- <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                -->
                                    <TextBlock Text="Lägg till Event"
                                               FontWeight="BOLD"/>
                                    <TextBlock Text="Eventnamn"/>
                                    <TextBox Margin="5"
                                             AcceptsReturn="True"
                                             AcceptsTab="False"
                                             Width="150">
                                    </TextBox>
                                    <TextBlock Text="Nation"/>
                                    <wpf:AutoCompleteTextBox Grid.Column="2"
                                             Grid.Row="3"
                                             Margin="5"
                                             Width="150">
                                    </wpf:AutoCompleteTextBox>
                                    <TextBlock Text="Datum"/>
                                    <Calendar></Calendar>
                                    <TextBlock Text="Tidpunkt"/>
                                    

                                </StackPanel>
                            </Canvas>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </TabItem>
            <TabItem Header="Webservices">
                <Grid/>
            </TabItem>
            <TabItem Header="ERP Integration">
                <Grid/>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
